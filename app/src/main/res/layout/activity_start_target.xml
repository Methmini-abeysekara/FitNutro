<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartTarget"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="276dp"
        android:layout_height="80dp"
        android:layout_marginTop="64dp"
        android:text="@string/W_select_your_path_L"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/secularone_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/W_gain_button"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00416A"
        app:cornerRadius="15dp"
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:fontFamily="@font/secularone_regular"
        android:layout_marginTop="152dp"
        android:text="@string/W_weight_gain_L"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/W_loss_Button"
        android:layout_marginTop="76dp"
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:layout_marginBottom="126dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#00416A"
        app:cornerRadius="15dp"
        android:fontFamily="@font/secularone_regular"
        android:text="@string/W_weight_loss_L"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/W_gain_button" />

    <ImageButton
        android:id="@+id/W_imageButton6_L"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/cus_btn2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_home_24"
        tools:ignore="VectorDrawableCompat" />
</androidx.constraintlayout.widget.ConstraintLayout>