<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/W_mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#ffffff"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">


            <TextView
                android:id="@+id/W_txt_id"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="1"
                android:textColor="@color/black"
                android:fontFamily="@font/secularone_regular"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/W_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Leg Day"
                android:fontFamily="@font/secularone_regular"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/W_txt_id"
                app:layout_constraintTop_toTopOf="@+id/W_txt_id" />

            <TextView
                android:id="@+id/W_txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Half squats"
                android:fontFamily="@font/secularone_regular"
                android:textColor="@color/indigo_blue"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/W_txt_title"
                app:layout_constraintTop_toBottomOf="@+id/W_txt_title" />

            <TextView
                android:id="@+id/W_txt_sets"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_marginStart="243dp"
                android:text="12"
                android:fontFamily="@font/secularone_regular"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/orange_red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.568" />

            <TextView
                android:id="@+id/W_txt_reps"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:text="4"
                android:fontFamily="@font/secularone_regular"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/orange_red"
                app:layout_constraintBaseline_toBaselineOf="@+id/W_textView_cross"
                app:layout_constraintStart_toEndOf="@+id/W_textView_cross" />

            <TextView
                android:id="@+id/W_textView_cross"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:text="Ã—"
                android:fontFamily="@font/secularone_regular"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBaseline_toBaselineOf="@+id/W_txt_sets"
                app:layout_constraintStart_toEndOf="@+id/W_txt_sets" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>